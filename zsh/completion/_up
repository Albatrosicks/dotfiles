#compdef up

#zsh completion for up

# Custom autocompletion for the up function.
_up() {
    local commands 
    commands=(
        '--dotfiles:update dotfiles config'
        '--brew:updates brew'
        '--appstore:updates appstore apps'
        '--antidote:updates zsh plugins'
        '--pipx:updates pipx'
        '--disable-quarantine:disable quarantine attribute for installed/updated software'
    )
    _describe -t commands 'up command' commands
}

# Def san the sbecic coemaraz abstraction 
if [[ -z "${ZSH_VERSION-}" ]]; then
    complete -o nospace -o default -o bashdefault -F _python_argcomplete up
else
    compdef _python_argcomplete up
fi
