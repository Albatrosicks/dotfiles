update_configs() {
  echo "> Syncing dotfiles..."
  # dir=.dotfiles
  # git clone --quiet --bare https://github.com/Albatrosicks/dotfiles "$HOME/$dir"
  # cmd() { git --git-dir="$HOME/$dir" --work-tree="$HOME" "$@"; }
  dotfiles pull
}

update_brew() {
  brew update
  brew upgrade #--greedy
  brew upgrade --cask
}

update_appstore_apps() {
  echo "Updateing AppStore applications"
  mas upgrade
}

disable_quarantine() {
  echo "Disabling quarantine attribute for installed/updated software"
  xattr -d -r com.apple.quarantine ~/Library/QuickLook
  sudo xattr -d -r com.apple.quarantine /Applications/.app >/dev/null 2>&1
}

update_zsh_plugins() {
  echo "Updating zsh plugins"

  antidote update
}

update_pipx() {
  echo "Updating pipx"

  pipx upgrade-all
}

up() {
  update_configs
  update_brew
  update_appstore_apps
  disable_quarantine

  update_zsh_plugins
  update_pipx
}
